<section class="py-14">
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4" style="height:70vh;">
<% section.section.blocks.each do |block| %>
  <!-- Block 1 -->
  <% block_image_url = url_for(block.image) if block.image.attached? %>
  <div class="relative bg-cover bg-center p-6 flex justify-center items-center flex-col cursor-pointer" style="background-image: url(<%= block_image_url %>);" onclick="location.href='your-link-for-block-1';">
    <h3 class="text-white text-xl font-bold mb-2"><%= block.title %></h3>
    <p class="text-white mb-4"><%= block.description %></p>
    <div class="border border-white py-2 px-4 text-white cursor-pointer">Click here</div>
  </div>
  <% end %>

  
  
  <!-- Repeat for other two blocks -->
</div>
</section>