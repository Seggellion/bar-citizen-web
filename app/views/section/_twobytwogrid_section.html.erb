<section class="py-14">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 p-4">

        <% section.section.blocks.each do |block| %>
            <% block_image_url = url_for(block.image) if block.image.attached? %>
            <div  class="group block bg-cover overflow-hidden bg-center w-full h-64 p-4 relative rounded-lg" style="background-image: url(<%= block_image_url %>); height: 72vh;" onclick="location.href='<%= block.link_url %>';">
                <div class="absolute top-0 left-0 bg-black bg-opacity-50 text-white font-bold text-2xl p-2">
                <% translation = block.translations.find { |t| t.language == I18n.locale.to_s } %>
                <% if translation %>
                  <p><%= translation.title %></p>
                  <% else %>
                  <p><%= block.title %></p>
                <% end %>
                
                </div>
                <div class="overlay absolute inset-0 bg-black opacity-0 text-white group-hover:opacity-100 flex items-center justify-center p-4">
                <% if translation %>
                  <p><%= translation.description %></p>
                  <% else %>
                  <p><%= block.description %></p>
                <% end %>
                </div>
            </div>
        <% end %>

 
    </div>
</section>
<style>
.overlay {
    cursor:pointer;
    transition: opacity 0.3s ease;
}
</style>