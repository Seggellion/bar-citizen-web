<section class="py-14">
<div class="grid grid-cols-1 md:grid-cols-2 gap-16 py-8 px-14 text-white h-screen" style="height: 90vh;">
  <!-- New Events Block -->
  <div class="overflow-auto px-4 py-4 bg-gray-800">
    <h3 class="text-2xl font-bold mb-4">New Events</h3>
    <!-- Repeat for each event -->
    <% @newest_events.each do |event|  %>
    <div class="flex  px-2 mb-4">
      <img src="/path-to-event-thumbnail.jpg" alt="Event Thumbnail" class="w-1/3">
      <div class="ml-4">
        <p class="font-semibold"><% event.title %></p>
        <p>Date and Time</p>       
        <%= event.start_datetime.strftime("%b %e, %Y %l%p") %>
      </div>
    </div>
    <% end %>
    <!-- ... additional events ... -->
  </div>

  <!-- New Activities Block -->
  <div class="overflow-auto px-4 py-4  bg-gray-800">
    <h3 class="text-2xl font-bold mb-4">New Activities</h3>
    <!-- Repeat for each activity -->
    <div class="flex  px-2 mb-4">
      <img src="/path-to-user-profile.jpg" alt="User Profile" class="w-1/3">
      <div class="ml-4">
        <p class="font-semibold">Username</p>
        <p>Activity Name</p>
        <p>Activity Creation Date</p>
        <!-- Additional Activity Details Here -->
      </div>
    </div>
    <!-- ... additional activities ... -->
  </div>
</div>
</section>