<div class="rounded-sm border border-gray-300 shadow-md dark:border-gray-700 dark:bg-gray-800">
  <div class="py-6 px-4 md:px-6 xl:px-7.5">
    <h4 class="text-xl font-bold text-gray-900 dark:text-white">User Badges</h4>
  </div>

  <%= render 'form' %> 

  <div class="grid grid-cols-3 rounded-sm bg-gray-900 dark:bg-gray-900 sm:grid-cols-6">
    <div class="p-2.5 xl:p-5">
      <h5 class="text-sm font-medium uppercase xsm:text-base text-gray-900 dark:text-white">Author</h5>
    </div>
    <div class="p-2.5 text-center xl:p-5">
      <h5 class="text-sm font-medium uppercase xsm:text-base text-gray-900 dark:text-white">Title</h5>
    </div>
    <div class="p-2.5 text-center xl:p-5">
      <h5 class="text-sm font-medium uppercase xsm:text-base text-gray-900 dark:text-white">Category</h5>
    </div>
    <div class="hidden p-2.5 text-center sm:block xl:p-5">
      <h5 class="text-sm font-medium uppercase xsm:text-base text-gray-900 dark:text-white">Replies</h5>
    </div>
    <div class="hidden p-2.5 text-center sm:block xl:p-5">
      <h5 class="text-sm font-medium uppercase xsm:text-base text-gray-900 dark:text-white">Created</h5>
    </div>
    <div class="hidden p-2.5 text-center sm:block xl:p-5">
    <h5 class="text-sm font-medium uppercase xsm:text-base text-gray-900 dark:text-white">Action</h5>
  </div>
  </div>

  <% if @user_badges.count > 0 %>
    <% @user_badges.each do |user_badge| %>
      <%= render 'user_badge', user_badge: user_badge %>
    <% end %>
  <% else %>
    <div class="text-center py-4">
      <p class="text-gray-500 dark:text-gray-400">No user_badges user_badges found.</p>
    </div>
  <% end %>

</div>
