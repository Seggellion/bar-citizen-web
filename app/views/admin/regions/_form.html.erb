<!-- Form Container -->
<div class="flex-grow">
  <%= form_with model: Region.new, url: regions_path, local: true, class: "flex flex-col px-2 space-y-4" do |form| %>
    
    <!-- Text Input Fields Row -->
    <div class="flex space-x-2 my-0">
      <%= form.text_field :name, placeholder: "Region Name", class: "p-2 rounded-lg bg-gray-800 border border-gray-600 text-white flex-grow", required: true %>
      <%= form.text_field :city, placeholder: "Home City", class: "p-2 rounded-lg bg-gray-800 border border-gray-600 text-white flex-grow", required: true %>
    </div>

    <!-- File Upload Row -->
    <div class="flex items-center space-x-2 my-0">
        <label for="file_input" class="text-sm font-medium text-gray-900 dark:text-white">Region Logo:</label>
        <%= form.file_field :logo_image, id: "file_input", class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
        <%= form.select :user_id, @users.map { |user| [user.username, user.id] }, { selected: current_user.id }, { class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600" } %>
    </div>
</div>

    <!-- Submit Button -->
    <div>
    <%= form.submit "Create Region", class: "p-2 rounded-lg bg-blue-500 hover:bg-blue-700 text-white" %>
    </div>
<% end %>
</div>