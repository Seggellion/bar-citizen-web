<div class="rounded-sm border border-gray-300 shadow-md dark:border-gray-700 dark:bg-gray-800">
<div class="px-2 md:px-6 xl:px-7.5 flex items-center justify-between">
  
  <!-- Header Text -->
  <h4 class="text-xl font-bold text-gray-900 dark:text-white">Event Regions</h4>
  
 <%= render 'form' %>


  

  <div class="grid grid-cols-6 rounded-sm bg-gray-900 dark:bg-gray-900 sm:grid-cols-6">
  <div class="p-2.5 text-center xl:p-5">
  </div>

  <div class="p-2.5 text-center xl:p-5">
  <h5 class="text-sm font-medium uppercase xsm:text-base text-gray-900 dark:text-white">Name</h5>
  </div>

    <div class="p-2.5 xl:p-5">
      <h5 class="text-sm font-medium uppercase xsm:text-base text-gray-900 dark:text-white">Manager</h5>
    </div>

    <div class="p-2.5 text-center xl:p-5">
      <h5 class="text-sm font-medium uppercase xsm:text-base text-gray-900 dark:text-white">City</h5>
    </div>
    <div class="p-2.5 text-center sm:block xl:p-5">
      <h5 class="text-sm font-medium uppercase xsm:text-base text-gray-900 dark:text-white">Created</h5>
    </div>

    <div class="hidden p-2.5 text-center sm:block xl:p-5">
    <h5 class="text-sm font-medium uppercase xsm:text-base text-gray-900 dark:text-white">Action</h5>
  </div>
  </div>

  <% if @regions.count > 0 %>
    <% @regions.each do |region| %>
      <%= render 'region', region: region %>
    <% end %>
  <% else %>
    <div class="text-center py-4">
      <p class="text-gray-500 dark:text-gray-400">No  regions found.</p>
    </div>
  <% end %>

</div>
