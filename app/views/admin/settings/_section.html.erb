
<div class="grid grid-cols-3 border-b border-stroke dark:border-strokedark sm:grid-cols-6">
<div class="flex items-center gap-3 p-2.5 xl:p-5">
  <div class="flex-shrink-1">
    <img src="<%= section.page.user.profile_image %>" alt="User" />
  </div>
  <p class="hidden font-medium  dark:text-white sm:block">
    <%= section.page.user.username %>
  </p>
</div>

<div class="flex items-center justify-center p-2.5 xl:p-5" style="max-width:100px; overflow-x:scroll">
  <p class="font-medium  dark:text-white"><%= section.page.title %></p>
</div>
<div class="flex items-center justify-center p-2.5 xl:p-5">
  <p class="font-medium  dark:text-white"><%= section.sectionable.title %></p>
</div>

<div class="hidden items-center justify-center p-2.5 sm:flex xl:p-5">
  <p class="font-medium text-meta-5 text-white"> <%= section.sectionable_type %></p>
</div>

<div class="hidden items-center justify-center p-2.5 sm:flex xl:p-5">
  <p class="font-medium dark:text-white"><%= section.sectionable.created_at.strftime('%a %b %d, %Y %l:%M %p') %></p>
</div>

<div class="hidden items-center justify-center p-2.5 sm:flex xl:p-5">
<p class="font-medium text-meta-5 text-white">
<%= link_to 'Edit', edit_admin_setting_path(section), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>

Trash
</p>
</div>

<!-- Displaying Blocks within the Section -->
<div class="col-span-3 sm:col-span-6">
  <% section.blocks.each do |block| %>
    <div class="flex items-center justify-between p-2">
      <!-- Adjust the styling as needed -->
      <p class="text-xs dark:text-white truncate">Title: <%= block.title %></p>
      <p class="text-xs dark:text-white truncate">Image URL: <%= block.image %></p>
      <p class="text-xs dark:text-white truncate">Link URL: <%= block.link_url %></p>

      <!-- Additional block details here -->
    </div>
  <% end %>
</div>


</div>