<div class="region-page">



<div class=" flex flex-col justify-end">
<%= render 'hero' %>
</div>

<% if @region.user == current_user || current_user&.user_type == 0 %>
    <%= render 'region_manager'  %>
<% end %>

<%= render 'regional_events' %>

<%= render 'regional_forums' %>

<div class="text-white min-h-screen flex items-center justify-center">
    <div class="container mx-auto p-4 max-w-4xl">
        <%= render 'region_details' %>
    </div>
</div>

<% unless @region.name == "Virtual" %>
    <%= render 'region_map' %>
<% end %>

<%= render 'highlight' %>


<style>
.bg-red-500{
    background-color:#ef4444;
}
</style>

</div>