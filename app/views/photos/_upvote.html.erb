<% if current_user %>
    <% if comment.upvoted_by?(current_user) %>
    <%= image_tag 'upvote_filled.svg', class: 'vote-button' %>
    <% else %>
    <%= button_to image_tag('upvote_regular.svg'), votes_path(votable_type: 'PhotoComment', votable_id: comment.id, upvote: true), method: :post, class: "vote-button" %>
    <% end %>
    <span><%= comment.votes.where(upvote: true).count %></span>
<% else %>
    <%= image_tag 'upvote_filled.svg', class: 'vote-button' %>
    <span><%= comment.votes.where(upvote: true).count %></span>
<% end %>