
<div class="md:h-screen">
<%= render 'event_hero', event: event %>
</div>

<% if @event.creator == current_user || current_user&.user_type == 0 %>
<%= render 'event_manager', event:event %>
<% end %>
<div class="text-white min-h-screen flex items-center justify-center">
    <div class="container mx-auto p-4 max-w-4xl">
<%= render 'event_details', event: event %>
</div>

</div>

<% if !@event.giveaways.empty? %>
    <%= render 'event_giveaways' %>
    <% end %>
<% if current_user&.participating_in?(event) %>
<%= render 'photo_form', photo: @photo, event: event %>
<% end %>
<% if @photos.count >= 1 %>
<%= render 'gallery', photos: @photos %>
<% end %>

<% unless @event.is_virtual %>
    <%= render 'event_map' %>
<% end %>

<%= render 'event_organizer', event:event %>
<%= render 'attendees', event:event %>
<%= render 'regional_forums', event:event %>
<%= render 'event_thewall' %>
<%= render 'event_activity' %>