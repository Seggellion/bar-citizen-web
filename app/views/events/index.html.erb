<div class="w-full flex justify-center">
  <div class="w-full max-w-8xl  px-4 "> <!-- Adjust the max-width as needed -->
    <p class="text-green-600 dark:text-green-400"><%= notice %></p>

    <h1 class="text-2xl font-bold text-center mb-6 dark:text-white">Events</h1>

    <div class="text-white p-4 mb-4 flex flex-col items-center justify-center">
    <% if @published_events.count > 0 %>

      <% @published_events.each do |event| %>
          <%= render event %>
      <% end %>
    <% else %>
        <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
        no events yet   

        </div>
      <% end %>

        <%= link_to "Create new event", new_event_path, class: "text-white m-4 inline-block bg-citizen-blue-highlight hover:bg-blue-700 font-bold py-2 px-4 rounded" %>
    </div>

  </div>
</div>

<style>
.bg-blue-900{
background-color: #1e3a8a;
}
</style>