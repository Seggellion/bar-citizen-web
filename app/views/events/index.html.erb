<div class="w-full flex justify-center mt-4 dark:bg-gray-800">
  <div class="w-full max-w-7xl px-4"> <!-- Adjust the max-width as needed -->
    <p class="text-green-600 dark:text-green-400"><%= notice %></p>

    <h1 class="text-2xl font-bold text-center mb-6 dark:text-white">Events</h1>
    <%= link_to "New event", new_event_path, class: "text-white mb-4 inline-block bg-blue-500 hover:bg-blue-700 font-bold py-2 px-4 rounded" %>

    <div id="events" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4">
      <% @events.each do |event| %>
        <div id="<%= dom_id event %>" class="dark:bg-gray-700 shadow-md rounded-lg p-6 mb-6 text-white">
          <%= render event %>
          <p class="text-right">
            <%= link_to "Show this event", event, class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-600" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
