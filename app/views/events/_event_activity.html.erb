<!-- Event Header -->

<div class="text-white min-h-screen flex items-center justify-center mt-8">
    <div class="container mx-auto p-4 max-w-4xl">

<div id="activity" class="mb-8 text-center">
    <h2 class="text-4xl font-bold mb-2">Event Activity</h2>
</div>

<!-- Event Details -->
<div class="bg-gray-800 mb-8 p-6 rounded-lg shadow-lg">
    <div class="mb-8">

    <% @event.activities.each do | activity | %>
        <div class="flex  px-2 mb-4">
          <img src="<%= activity.user.profile_image %>" alt="User Profile" class="w-1/8">
          <div class="ml-4">
            <p class="font-semibold"><%= activity.user.username %></p>
            <p><%= activity.name %></p>
            <p><%= activity.created_at.strftime("%b %e, %Y %l%p") %></p>
            <!-- Additional Activity Details Here -->
          </div>
        </div>
    <% end %>

</div>
</div>


</div>
</div>


